{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": [
            "es6"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@pages": [
                "./src/pages"
            ],
            "@routes": [
                "./src/routes"
            ],
            "@shared": [
                "./src/shared"
            ],
            "@services": [
                "./src/services"
            ],
            "@store": [
                "./src/store"
            ],
            "@assets": [
                "./src/assets"
            ],
            "@theme": [
                "./src/global"
            ],
            "@utils": [
                "./src/utils"
            ],
            "@mocks": [
                "./src/mocks"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ],
    "extends": "expo/tsconfig.base"
}